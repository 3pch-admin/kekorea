<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC  
        "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"  
        "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="layoutDefault" template="/jsp/common/layouts/layoutDefault.jsp">
		<put-attribute name="title" value="국제엘렉트릭코리아 PLM 시스템"></put-attribute>
		<put-attribute name="header" value="/jsp/common/header.jsp"></put-attribute>
		<put-attribute name="menu" value="/jsp/menu.jsp"></put-attribute>
		<put-attribute name="body" value=""></put-attribute>
		<put-attribute name="footer" value="/jsp/common/footer.jsp"></put-attribute>
	</definition>

	<definition name="layoutMain" template="/jsp/common/layouts/layoutMain.jsp">
		<put-attribute name="title" value="국제엘렉트릭코리아 PLM 시스템"></put-attribute>
		<put-attribute name="header" value="/jsp/common/header.jsp"></put-attribute>
		<put-attribute name="body" value=""></put-attribute>
		<put-attribute name="footer" value="/jsp/common/footer.jsp"></put-attribute>
	</definition>

	<definition name="layoutPopup" template="/jsp/common/layouts/layoutPopup.jsp">
		<put-attribute name="title" value="국제엘렉트릭코리아 PLM 시스템"></put-attribute>
		<put-attribute name="body" value=""></put-attribute>
		<put-attribute name="footer" value="/jsp/common/footer.jsp"></put-attribute>
	</definition>

	<!-- default layout patter -->
	<definition name="default:/*/*" extends="layoutDefault">
		<put-attribute name="body" value="/jsp/{1}/{2}.jsp"></put-attribute>
		<put-attribute name="menu" value="/jsp/{1}/menu.jsp"></put-attribute>
	</definition>

	<definition name="default:/*/*/*" extends="layoutDefault">
		<put-attribute name="body" value="/jsp/{1}/{2}/{3}.jsp"></put-attribute>
		<put-attribute name="menu" value="/jsp/{1}/menu.jsp"></put-attribute>
	</definition>

	<definition name="default:/*/*/*/*" extends="layoutDefault">
		<put-attribute name="body" value="/jsp/{1}/{2}/{3}/{4}.jsp"></put-attribute>
		<put-attribute name="menu" value="/jsp/{1}/menu.jsp"></put-attribute>
	</definition>

	<definition name="main:/*/*" extends="layoutMain">
		<put-attribute name="body" value="/jsp/{1}/{2}.jsp"></put-attribute>
	</definition>

	<definition name="popup:/*/*" extends="layoutPopup">
		<put-attribute name="body" value="/jsp/{1}/{2}.jsp"></put-attribute>
	</definition>

	<definition name="popup:/*/*/*" extends="layoutPopup">
		<put-attribute name="body" value="/jsp/{1}/{2}/{3}.jsp"></put-attribute>
	</definition>

	<definition name="popup:/*/*/*/*" extends="layoutPopup">
		<put-attribute name="body" value="/jsp/{1}/{2}/{3}/{4}.jsp"></put-attribute>
	</definition>

</tiles-definitions>